<Window x:Class="app_computer.OrderDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_computer"
        mc:Ignorable="d"
        Title="OrderDetails" Height="450" Width="800">
    <Grid x:Name="grid2">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="back_button" Content="Вернуться к покупкам" Width="150" Height="20" HorizontalAlignment="Right" Click="back_button_Click" />
            <TextBlock x:Name="mem" Margin="22,26,22,44" TextWrapping="Wrap" Grid.RowSpan="2" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="cart_label" Text="Корзина" FontSize="25" HorizontalAlignment="Right" Grid.Row="1" />
    </Grid>
</Window>
